{
  "name": "qunit-fixtures",
  "version": "0.0.1",
  "description": "Store test fixtures in files and assert on them.",
  "repository": "https://github.com/scalvert/qunit-fixtures",
  "license": "MIT",
  "author": "steve.calvert@gmail.com",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib/*",
    "dev": "tsc -w",
    "lint": "eslint --ext js,ts .",
    "prepublishOnly": "yarn build",
    "postpublish": "yarn clean",
    "test": "yarn build && qunit lib/tests && yarn clean",
    "test:debug": "yarn build && node --inspect-brk node_modules/.bin/qunit lib/tests",
    "test:dev": "yarn build && qunit lib/tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --ext js,ts . --fix",
      "git add"
    ]
  },
  "dependencies": {
    "recursive-readdir-sync": "^1.0.6"
  },
  "devDependencies": {
    "@types/qunit": "^2.9.0",
    "@types/tmp": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-qunit": "^4.0.0",
    "fixturify": "^1.2.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "qunit": "^2.9.3",
    "release-it": "^12.2.1",
    "release-it-lerna-changelog": "^1.0.3",
    "tmp": "^0.1.0",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": "10.* || >= 12.*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}",
      "changelog": "git log --pretty=format:\"* %s (%h)\" --no-merges --perl-regexp --author=\"^((?!dependabot-preview).*)$\" ${latestTag}...HEAD"
    },
    "github": {
      "release": true
    }
  }
}
